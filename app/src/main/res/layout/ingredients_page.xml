<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/verticalLayout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_marginBottom="3dp">
        <ImageButton
            android:id="@+id/firstButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/plate" />
        <ImageButton
            android:id="@+id/secondButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/food_icon" />
        <ImageButton
            android:id="@+id/thirdButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/shopping_icon2"/>
        <ImageButton
            android:id="@+id/fourthButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/question_icon" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstLinearLayout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/linearLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="#000000"
            android:gravity="center"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="#000000"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dfdfdf"
        android:layout_below="@+id/firstLinearLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dfdfdf"
            android:id="@+id/linearLayout4">
            <Button
                android:background="@android:color/transparent"
                android:text="Add Ingredient"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/addNewIngredient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/line"/>
            <Button
                android:id="@+id/resetList"
                android:background="@android:color/transparent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RESET LIST"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#ff0000"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dfdfdf"
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout1">
            <CheckBox
                android:id="@+id/checkBoxStarter1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="Starter"
                android:onClick="onCheckboxClicked"
                android:textStyle="bold"
                />
            <CheckBox
                android:id="@+id/checkBoxMain2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="Main"
                android:onClick="onCheckboxClicked"
                android:textStyle="bold"
                />
            <CheckBox
                android:id="@+id/checkBoxDesert3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="Dessert"
                android:onClick="onCheckboxClicked"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/textviewChanger"
        android:layout_below="@+id/linearLayout1">
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_below="@id/textviewChanger">
        <ListView
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/IngredientsList"
            android:gravity="center" />
    </LinearLayout>

</RelativeLayout>